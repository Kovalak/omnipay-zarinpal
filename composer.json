{
  "name": "nekofar/omnipay-zarinpal",
  "type": "library",
  "description": "ZarinPal driver for the Omnipay PHP payment processing library",
  "keywords": [
    "omnipay",
    "zarinpal",
    "gateway",
    "merchant",
    "payment",
    "purchase"
  ],
  "homepage": "https://github.com/nekofar/omnipay-zarinpal",
  "license": "MIT",
  "authors": [
    {
      "name": "Milad Nekofar",
      "email": "milad@nekofar.com"
    }
  ],
  "require": {
    "php": "^7.3 || ^8.0",
    "ext-json": "*",
    "omnipay/common": "^3.1"
  },
  "require-dev": {
    "omnipay/tests": "^4.1",
    "nekofar/dev-tools": "^1.0",
    "phpstan/phpstan-strict-rules": "^0.12.11"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Omnipay\\ZarinPal\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Omnipay\\ZarinPal\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "lint": "phpcs",
    "test": "phpunit"
  }
}
